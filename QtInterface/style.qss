ElchMainWindow{background-color:#181C3F}

ElchStatusBar{background-color: #2A2D56; color:#7b8ccb;}
ElchStatusBar QLabel#label{color: #7b8ccb; font-family: Roboto; font-style: normal;font-size: 8pt;}
ElchStatusBar QLabel#value{color: #7b8ccb; font-family: Roboto; font-style: normal;font-size: 16pt;}

ElchTitlebar QLabel{background: #181C3F; color: aliceblue; font-family: Roboto; font-style: normal; font-size: 12pt;}
ElchTitlebar QToolButton#Close{background: #181C3F url(../Icons/Quit.png) center center no-repeat; border:none;}
ElchTitlebar QToolButton#Close:hover{background: #181C3F url(../Icons/Quit_Hover.png) center center no-repeat ; border: none}
ElchTitlebar QToolButton#Minimize{background: #181C3F url(../Icons/Minimize.png) center center no-repeat; border:none;}
ElchTitlebar QToolButton#Minimize:hover{background: #181C3F url(../Icons/Minimize_Hover.png) center center no-repeat ; border: none}

ElchRibbon{background-color:#2A2D56;}

ElchMenuPages{background-color: #2A2D56;}
ElchMenuPages QLabel{color: #7b8ccb;}

ElchPidMenu QLabel{color: #7b8ccb; font-family: Roboto; font-style: normal;font-size: 8pt;}

ElchRibbon QPushButton#Devices{border-image: url(../Icons/Devices.png)}
ElchRibbon QPushButton#Devices:hover{border-image: url(../Icons/Devices_Glow.png)}
ElchRibbon QPushButton#Devices:checked{border-image: url(../Icons/Devices_Glow.png); background-color: #181C3F}

ElchRibbon QPushButton#Control{border-image: url(../Icons/Control.png)}
ElchRibbon QPushButton#Control:hover{border-image: url(../Icons/Control_Glow.png)}
ElchRibbon QPushButton#Control:checked{border-image: url(../Icons/Control_Glow.png); background-color: #181C3F}

ElchRibbon QPushButton#PID{border-image: url(../Icons/PID.png)}
ElchRibbon QPushButton#PID:hover{border-image: url(../Icons/PID_Glow.png)}
ElchRibbon QPushButton#PID:checked{border-image: url(../Icons/PID_Glow.png); background-color: #181C3F}

ElchRibbon QPushButton#Plotting{border-image: url(../Icons/Plotting.png)}
ElchRibbon QPushButton#Plotting:hover{border-image: url(../Icons/Plotting_Glow.png)}
ElchRibbon QPushButton#Plotting:checked{border-image: url(../Icons/Plotting_Glow.png); background-color: #181C3F}